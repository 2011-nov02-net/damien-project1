@using Microsoft.AspNetCore.Identity

@inject SignInManager<ArkhenManufacturing.DataAccess.ApplicationUser> SignInManager
@inject UserManager<ArkhenManufacturing.DataAccess.ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User)) {
  <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
    <ul class="nav navbar-nav navbar-right">
      <li>
        <a class="navbar-brand btn-link navbar-link text-light" asp-controller="Account" asp-action="Details" title="Manage">Hello @UserManager.GetUserName(User)!</a>
      </li>
      <li>
        <button class="navbar-brand btn-link navbar-link text-light bg-dark" type="submit">Log out</button>
      </li>
    </ul>
  </form>
} else {
  <ul class="nav navbar-nav navbar-right">
    <li><a class="navbar-brand btn-link text-light" asp-area="" asp-controller="Account" asp-action="Register">Register</a></li>
    <li><a class="navbar-brand btn-link text-light" asp-area="" asp-controller="Account" asp-action="Login">Log in</a></li>
  </ul>
}